<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:drawable="@drawable/tab_indicator_selected" android:state_selected="true">
    <shape
        android:shape="ring"
        android:innerRadius="0dp"
        android:thickness="5dp"
        android:useLevel="false">
        <solid android:color="@color/selected_tab_color"/>
    </shape>
</item>
    <item  android:drawable="@drawable/tab_indicator_default" android:state_selected="false">
        <shape
            android:shape="ring"
            android:innerRadius="0dp"
            android:thickness="5dp"
            android:useLevel="false">
            <solid android:color="@color/default_tab_color"/>
        </shape>
    </item>
</selector>